		version="2.0">
		<Header>
			<_Group>C#</_Group>
			<MimeType>text/x-csharp</MimeType>
			<Shortcut>fqry</Shortcut>
			<_Description>Template for new Func Query field</_Description>
			<TemplateType>Expansion</TemplateType>
		</Header>
